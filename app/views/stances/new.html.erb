<%= render "layouts/heading", heading: "STANCES" %>

    <%= form_for :stance, url: stances_path, html: { multipart: true} do |f| %>
      <div class="form-group">
        <%= f.label :japanese_name %>
        <%= f.text_field :japanese_name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :english_name %>
        <%= f.text_field :english_name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :image, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit %>
      </div>
    <% end %>
