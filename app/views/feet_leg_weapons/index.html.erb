<%= render "layouts/heading", heading: "Feet-Leg Weapons" %>

<div class="row add-button">
  <%= link_to 'Add feet-leg weapon', new_feet_leg_weapon_path, :class => "btn btn-default"%>
</div>

<div class="row items">
  <% @feet_leg_weapons.each do | feet_leg_weapon | %>
    <div class="col-md-4">
      <div class="thumbnail">
        <h2> <%= feet_leg_weapon.japanese_name %> </h2>
        <%= link_to image_tag(feet_leg_weapon.image.url(:med)), feet_leg_weapon_path(feet_leg_weapon) %>
        <p><%= link_to "View details", feet_leg_weapon_path(feet_leg_weapon),  :class => "btn btn-default", :role => "button" %></p>
          <%= link_to "Update", edit_feet_leg_weapon_path(feet_leg_weapon),  :class => "btn btn-default", :role => "button" %>
          <%= link_to "Delete", feet_leg_weapon_path(feet_leg_weapon), method: :delete, data: { confirm: "Are you sure?" }, :class => "btn btn-default", :role => "button" %>
      </div>
    </div>
  <% end %>
</div>
